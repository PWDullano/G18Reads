extends ../layout

block content

  div.sidebarNav
    a(href='/authors')
      img.splashPictureIndex(src='../images/author.jpg')
      h1.subjectIndex Authors
  div.sidebarNav
    a(href='/books')
      img.splashPictureIndex(src='../images/books.jpg')
      h1.subjectIndex Books
  if books
    div.booksIndex
      img.booksCard(src='#{books.url}')
      p #{books.title}
      p #{books.fname_1} #{books.lname_1}, #{books.fname_2} #{books.lname_2} & #{books.fname_3} #{books.lname_3}
      p #{books.genre}
      p #{books.description}
      a(href='/books/#{books.id}/edit')
        button Edit
