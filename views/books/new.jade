extends ../layout

block content

  div.sidebarNav
    a(href='/authors')
      img.splashPictureIndex(src='../images/author.jpg')
      h1.subjectIndex Authors
  div.sidebarNav
    a(href='/books')
      img.splashPictureIndex(src='../images/books.jpg')
      h1.subjectIndex Books
  div.newContainer
    h1.newHeader New book
    form(action='/books' method='POST')
      div.form-group
        label(for="title") Title
        br
        input.form-control(type="text" id="title" name='title' placeholder="Book Title")
      div.form-group
        label(for="genre") Genre
        br
        input.form-control(type="text" id="genre" name='genre' placeholder="Book Genre")
      div.form-group
        label(for="url") Cover Image URL
        br
        input.form-control(type="text" id="url" name='url' placeholder="Book Cover")
      div.form-group
        label(for="description") Description
        br
        input.form-control(type="text" id="description" name='description')
      div.form-group
        label(for="first_name") First Author
        br
        input.form-control(type="text" id="first_name" name='first_name' placeholder='First Name')
        label(for="last_name")
        input.form-control(type="text" id="last_name" name='last_name' placeholder='Last Name')
      button.btn.btn-primaryU(type="submit") Submit
